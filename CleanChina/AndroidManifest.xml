<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cleanchina"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.CC" >
        <activity
            android:name="com.cleanchina.loading.LoadingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="home" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="home"
                    android:scheme="cleanchina" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cleanchina.meeting.MeetingActivity"
            android:label="meeting" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="meeting"
                    android:scheme="cleanchina" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cleanchina.meeting.MeetingTabActivity"
            android:label="meetingtab" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="meetingtab"
                    android:scheme="cleanchina" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.cleanchina.meeting.MeetingDetailActivity"
            android:label="meetingtab" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="detail"
                    android:scheme="cleanchina" />
            </intent-filter>
        </activity>
    </application>

</manifest>