<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/bg_blue"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_up_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/meeting_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_meeting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="82dp"
                    android:text="点击返回主菜单"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="展览会"
                    android:textColor="@color/text_gray"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/bg_branch" />

                <TextView
                    android:id="@+id/meeting_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="18dp"
                    android:drawableTop="@drawable/ic_meeting_about"
                    android:gravity="center_horizontal"
                    android:text="关于展会"
                    android:textColor="@color/text_gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/meeting_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="83dp"
                    android:layout_marginTop="86dp"
                    android:drawableTop="@drawable/ic_meeting_map"
                    android:gravity="center_horizontal"
                    android:text="展位平面图"
                    android:textColor="@color/text_gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/meeting_audience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="140dp"
                    android:drawableTop="@drawable/ic_meeting_audience"
                    android:gravity="center_horizontal"
                    android:text="观众登记"
                    android:textColor="@color/text_gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/meeting_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="83dp"
                    android:layout_marginTop="210dp"
                    android:drawableTop="@drawable/ic_meeting_search"
                    android:gravity="center_horizontal"
                    android:text="展商查询"
                    android:textColor="@color/text_gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/meeting_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="265dp"
                    android:drawableTop="@drawable/ic_meeting_award"
                    android:gravity="center_horizontal"
                    android:text="金钻奖"
                    android:textColor="@color/text_gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/meeting_even"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="83dp"
                    android:layout_marginTop="335dp"
                    android:drawableTop="@drawable/ic_meeting_even"
                    android:gravity="center_horizontal"
                    android:text="论坛活动"
                    android:textColor="@color/text_gray"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/meeting_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="395dp"
                    android:drawableTop="@drawable/ic_meeting_cost"
                    android:gravity="center_horizontal"
                    android:text="聚划算"
                    android:textColor="@color/text_gray"
                    android:textSize="14dp" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</ScrollView>