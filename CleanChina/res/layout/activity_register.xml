<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="54dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="姓名："
            android:textColor="@color/text_gray"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/register_name"
                layout="@layout/layout_multi_state_input" />

            <TextView
                android:id="@+id/register_name_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tips"
                android:textColor="@color/text_gray"
                android:textSize="9dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="公司："
            android:textColor="@color/text_gray"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/register_comp"
                layout="@layout/layout_multi_state_input" />

            <TextView
                android:id="@+id/register_comp_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tips"
                android:textColor="@color/text_gray"
                android:textSize="9dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="地址："
            android:textColor="@color/text_gray"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/register_address"
                layout="@layout/layout_multi_state_input" />

            <TextView
                android:id="@+id/register_address_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tips"
                android:textColor="@color/text_gray"
                android:textSize="9dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="省市："
            android:textColor="@color/text_gray"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <include
                android:id="@+id/register_city"
                layout="@layout/layout_city_input" />

            <TextView
                android:id="@+id/register_city_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tips"
                android:textColor="@color/text_gray"
                android:textSize="9dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="手机："
            android:textColor="@color/text_gray"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/register_tel"
                layout="@layout/layout_multi_state_input" />

            <TextView
                android:id="@+id/register_tel_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tips"
                android:textColor="@color/text_gray"
                android:textSize="9dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:layout_weight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:text="邮箱："
            android:textColor="@color/text_gray"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/register_mail"
                layout="@layout/layout_multi_state_input" />

            <TextView
                android:id="@+id/register_mail_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tips"
                android:textColor="@color/text_gray"
                android:textSize="9dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_blue"
        android:drawableTop="@drawable/ic_ok"
        android:gravity="center"
        android:minHeight="44dp"
        android:padding="5dp"
        android:text="确认注册"
        android:textColor="@android:color/white"
        android:textSize="11dp" />

</LinearLayout>